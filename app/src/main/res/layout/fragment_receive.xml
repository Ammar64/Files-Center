<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/TV_ReceiveTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Receive"
        android:textColor="@color/colorTrinary"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageButton
        android:id="@+id/B_ScanQR"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/circular_button"
        android:src="@drawable/camera_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:labelFor="@+id/Scan"
        android:text="scan QR"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/B_ScanQR"
        app:layout_constraintStart_toStartOf="@+id/B_ScanQR"
        app:layout_constraintTop_toBottomOf="@+id/B_ScanQR" />

    <EditText
        android:id="@+id/ET_IPInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:autofillHints=""
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="@+id/B_ScanQR"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/B_ScanQR"
        app:layout_constraintTop_toTopOf="@id/B_ScanQR"
        android:layout_marginHorizontal="30dp"
        android:hint="Enter IP"/>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/B_RequestAvailableDownloads"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/colorSecondary"
        android:text="Search"
        android:textColor="@color/white"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/B_ScanQR" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/RV_DownloadsList"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/B_RequestAvailableDownloads"
        android:paddingVertical="10dp"
        tools:listitem="@layout/row_download_view" />



</androidx.constraintlayout.widget.ConstraintLayout>